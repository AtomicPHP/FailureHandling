{
    "name": "niels-nijens/failurehandling",
    "type": "library",
    "description": "An error and exception handling library for PHP 5.3+",
    "keywords": [
        "Failurehandling",
        "Errorhandling",
        "Exceptions",
        "Error",
        "Logging"
    ],
    "homepage": "https://github.com/niels-nijens/FailureHandling",
    "license": "MIT",
    "authors": [
        {
            "name": "Niels Nijens",
            "email": "nijens.niels@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "niels-nijens/utilities": "~2.0",
        "psr/log": "1.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "suggest": {
        "niels-nijens/logging": "The recommended logging library to use with FailureHandling."
    },
    "autoload": {
        "psr-4": {
            "Nijens\\FailureHandling\\": "src/"
        }
    }
}
