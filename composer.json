{
    "name": "atomicphp/failurehandling",
    "type": "library",
    "description": "An open-source library for handling and logging failures (errors and exceptions) in PHP",
    "keywords": [
        "Failurehandling",
        "Errorhandling",
        "Exceptions",
        "Error",
        "Logging"
    ],
    "homepage": "https://github.com/AtomicPHP/FailureHandling",
    "license": "MIT",
    "authors": [
        {
            "name": "Niels Nijens",
            "email": "nijens.niels@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "atomicphp/utilities": "1.0.*",
        "psr/log": "1.0.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "atomicphp/logging": "The recommended logging library to use with FailureHandling."
    },
    "autoload": {
        "classmap": ["src/"]
    }
}
